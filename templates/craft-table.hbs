<form>
    <h2>Recipe: {{recipe.name}}</h2>
    <div class="recipe-card br-full br-rad15">
        <div class="table-target-block">
            <img src="{{recipe.target.img}}" class="table-target-image br-none br-right" />
            <div style="width:inherit;">
                <p class="br-bottom" style="font-size: 1.5rem;
                    border-top-right-radius: 15px;">
                    {{recipe.target.name}}
                </p>
                <div style="width: 100%; height: 50%; display: flex; align-items: center;">
                    <p class="br-right" style="font-size: 1.5rem;">Quantity:</p>
                    <p style="min-width: 64px;
                            width: max-content;                           
                            font-size: 1.5rem;">
                        {{getCorrectQuantityValue recipe.target}}
                    </p>
                    <button type="button" title="Craft item" class="br-none br-left" data-action="craft-item" style="
                            border-bottom-right-radius: 15px;">
                        <i class="fas fa-hammer-crash {{#if (notGM)}}disabled{{/if}}"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    {{#if (equals recipe.type "items")}}
    <h2>Required ingredients:</h2>
    <div style="width: 100%; 
    display: grid;
    justify-content: space-between;
    grid-template-columns: 22% 22% 22% 22%; 
    max-height: 400px;
    overflow-x: hidden;
    overflow-y: scroll;
    padding-left: 10px;
    padding-right: 10px;">
        {{#each recipe.ingredients}}
        <div class="recipe-card br-full br-rad15" style="display: flex; flex-direction: column;">
            <img src="{{this.img}}" class="br-none br-bottom" style="border-top-left-radius: 12px;
                border-top-right-radius: 12px;
                filter: grayscale(100%);" />
            <p class="br-bottom" style="height: 100%;
                font-size: 0.8rem;
                text-overflow: ellipsis;
                overflow-x: hidden;
                overflow-y: scroll;
                max-height: 36px;">
                {{this.name}}
            </p>
            <div style="width: 100%; display: flex; align-items: center;">
                <p class="br-right" style="width: 70%;
                        font-size: 0.8rem;
                        border-bottom-left-radius: 15px;">Required:</p>
                <p style="width: 100%;                          
                        font-size: 0.8rem;
                        border-bottom-right-radius: 15px;">
                    {{getCorrectQuantityValue this}}
                </p>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="sc-loading-bar br-full br-rad15">
        <div id="sc-loading-bar-fill" class="br-rad15"></div>
    </div>
    {{/if}}
</form>